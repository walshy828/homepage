# Application Settings
SECRET_KEY=your-secret-key-change-in-production
# Backups
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_RETENTION_WEEKS=4
BACKUP_RETENTION_MONTHS=6

# Database
DATABASE_URL=postgresql+asyncpg://homepage:homepage@db:5432/homepage

# Gemini AI (for link categorization)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.5-flash-preview-05-20

# Weather API (OpenWeatherMap)
WEATHER_API_KEY=your-openweathermap-api-key

# Proxmox Integration (optional)
PROXMOX_HOST=https://your-proxmox-host:8006
PROXMOX_USER=root@pam
PROXMOX_TOKEN_NAME=your-token-name
PROXMOX_TOKEN_VALUE=your-token-value

# Docker Integration
# The Docker socket is mounted automatically in docker-compose.yml
# For remote Docker hosts, uncomment and configure:
# DOCKER_HOST=tcp://remote-docker-host:2375
